<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view2D.MenuController">
        <center>
            <VBox alignment="TOP_CENTER" spacing="150" >

                <Label fx:id="menuTitle" text="Zombie Survival" textFill="WHITE">
                    <font>
                        <Font name="Tempus Sans ITC" size="63.0" />
                    </font>
                    <effect>
                        <DropShadow radius="12.965" spread="0.64" width="32.86" />
                    </effect>
                </Label>
                <VBox minHeight="200" style="-fx-background-color: #454954;" alignment="CENTER" spacing="20">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                        <Button fx:id="play" minWidth="150" style="-fx-background-color: #222328;"  stylesheets="@btnStyle.css" text="Play" textFill="#5aae74">

                            <font>
                                <Font name="SansSerif Regular" size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="load" mnemonicParsing="false" minWidth="150" style="-fx-background-color: #222328;" stylesheets="@btnStyle.css" text="Load Save" textFill="#84cfff">
                            <font>
                                <Font name="SansSerif Regular" size="18.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" prefHeight="33.0" minWidth="150" style="-fx-background-color: #222328;" stylesheets="@btnStyle.css" text="Settings" textFill="#84cfff">
                            <font>
                                <Font name="SansSerif Regular" size="18.0" />
                            </font>
                        </Button>
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="70.41" radius="34.955" spread="0.25" width="71.41" />
                    </effect>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </VBox>

            </VBox>

        </center>
</BorderPane>
